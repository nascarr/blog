<%= form_for([@post, @post.comments.build]) do |f| %>

  <% if @comment && @comment.errors.any? %>
    <div id="error_explanation">
      <h2>Исправьте, пожалуйста, следующие ошибки, чтобы сохранить сообщение:</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= f.label "Автор" %><br />
  <%= f.text_field :commenter %>
  </div>
       
  <div class="field">
    <%= f.label "Комментарий" %><br />
    <%= f.text_area :body, :size => "133x3" %>
  </div>

  <div class="actions">
  <%= f.submit "Сохранить" %>
  </div>

<% end %>