<%= form_for([@post, @post.comments.build]) do |f| %>

  <%= render :partial => 'errors/messages', :locals => {:message => @comment} %>

  <div class="field">
  <%= f.label "Автор" %><br />
  <%= f.text_field :commenter %>
  </div>
       
  <div class="field">
    <%= f.label "Комментарий" %><br />
    <%= f.text_area :body, :size => "133x3" %>
  </div>

  <div class="actions">
  <%= f.submit "Сохранить" %>
  </div>

<% end %>