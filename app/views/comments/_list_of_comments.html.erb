<%# post = Post.find(params[:post_id]) %>
<table >

 <% @post.comments.order('created_at desc').each do |comment| %>
    <tr>
      <td class = "small"> <i><%= comment.commenter %>, <%= time_created_at(comment) %> </i> </td>
      <td> <%= comment.body %> </td>
       <td >
       <u class = "small"> <%= link_to 'Удалить', [comment.post, comment],
         :confirm => 'Вы уверены?',
         :method => :delete %> 
       </u>
       </td>
    </tr>
  
  <% end %>
</table>