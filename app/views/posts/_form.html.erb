<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>Исправьте, пожалуйста, следующие ошибки, чтобы сохранить сообщение:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Автор" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Заголовок" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Содержание" %><br />
    <%= f.text_area :content, :size => "133x5" %>
  </div>
  <div class="field">
  <%= f.label "Фото" %><br />
  <%= f.file_field :photo %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить"%>
  </div>
<% end %>
