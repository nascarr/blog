<h1>Posts</h1>
<%= link_to 'New Post', new_post_path %>

<table cellpadding = "5" >
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


 <% Post.order('created_at desc').each do |post| %>
 <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %></td>
  </tr>
 <% end %> 

</table>

<br />



<h1>Comments</h1>

<table cellpadding = "5">
 <tr>
      <th>  </th>
      <th>  </th>
      <th>  </th>
 </tr>
 <% Comment.order('created_at desc').limit(10).each do |comment| %>
    <tr>
      <td> <b><%= comment.commenter %> </b></td>
      <td> <%= comment.body %> </td>
      <td> <%= link_to 'Show post', comment.post %> </td>
    </tr>
  
  <% end %>
</table>

<br />