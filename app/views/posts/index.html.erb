
<%= stylesheet_link_tag "index" %>
<h1>Posts</h1>
<u> <%= link_to 'New Post', new_post_path %> </u>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
  </tr>


 <% Post.order('created_at desc').each do |post| %>
 <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= link_to post.content.split(//).first(100).join, post %></td>
  </tr>
 <% end %> 

</table>

<br />



<h1>Comments</h1>

<table>
 <tr>
      <th>  </th>
      <th>  </th>
      <th>  </th>
 </tr>
 <% Comment.order('created_at desc').limit(10).each do |comment| %>
    <tr>
      <td> <b><%= comment.commenter %> </b></td>
      <td> <%= link_to comment.body.split(//).first(100).join, comment.post %> </td>
    </tr>
  
  <% end %>
</table>

<br />