<h1>Posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>

<h1>Comments</h1>

<table>
 <tr>
      <th>  </th>
      <th>  </th>
      <th>  </th>
 </tr>
 <% @posts.each do |post| %>
    <% post.comments.each do |comment| %>

    <tr>
      <td> <b><%= comment.commenter %> </b></td>
      <td> <%= comment.body %> </td>
      <td> <%= link_to 'Show post', post %> </td>
    </tr>
  
    <% end %>
  <% end %>
</table>

<br />